<script>
document.addEventListener('DOMContentLoaded', () => {
  lucide.createIcons();

  // Navigation
  const navLinks = document.querySelectorAll('.nav-link');
  const pages = document.querySelectorAll('.page-content');

  navLinks.forEach(link => {
    link.addEventListener('click', (e) => {
      e.preventDefault();
      const targetId = link.getAttribute('data-target');
      pages.forEach(p => p.classList.add('hidden'));
      document.getElementById(targetId).classList.remove('hidden');
      navLinks.forEach(n => n.classList.remove('active'));
      link.classList.add('active');
    });
  });

  // Tier data (from your doc requirements)
  const tierData = {
    tier12: {
      name: "Groups of 1‚Äì2",
      reqs: [
        "<span class='font-bold'>1 power source</span>",
        "<span class='font-bold'>5 branches (switches)</span>",
        "<span class='font-bold'>7 lights</span>",
        "<span class='font-bold'>Base size:</span> 15 √ó 30 (can be altered)",
        "<span class='font-bold'>Must look neat</span>",
        "<span class='font-bold'>Wire must be hidden</span>"
      ]
    },
    tier3: {
      name: "Groups of 3",
      reqs: [
        "<span class='font-bold'>1 power source</span>",
        "<span class='font-bold'>7 branches (switches)</span>",
        "<span class='font-bold'>10 lights</span>",
        "<span class='font-bold'>1 non-light device</span>",
        "<span class='font-bold'>Base size:</span> 15 √ó 30 (can be altered)",
        "<span class='font-bold'>Must look neat</span>",
        "<span class='font-bold'>Wire must be hidden</span>",
        "<span class='font-bold'>Aesthetics graded higher</span>"
      ]
    },
    tier4: {
      name: "Groups of 4",
      reqs: [
        "<span class='font-bold'>1 power source</span>",
        "<span class='font-bold'>10 branches (switches)</span>",
        "<span class='font-bold'>14 lights</span>",
        "<span class='font-bold'>1 non-light device</span>",
        "<span class='font-bold'>Base size:</span> 15 √ó 30 (can be altered)",
        "<span class='font-bold'>Must look neat</span>",
        "<span class='font-bold'>Wire must be hidden</span>",
        "<span class='font-bold'>Aesthetics graded highest</span>"
      ]
    }
  };

  const tierSelect = document.getElementById('tierSelect');
  const tierBadge = document.getElementById('tierBadge');
  const tierReqList = document.getElementById('tierReqList');

  function renderTier() {
    const tierKey = tierSelect.value;
    const t = tierData[tierKey];
    tierBadge.textContent = t.name;
    tierReqList.innerHTML = t.reqs.map(r => `<li class="flex gap-2"><span class="text-indigo-600 font-bold">‚Ä¢</span><span>${r}</span></li>`).join("");
  }
  tierSelect.addEventListener('change', renderTier);
  renderTier();

  // Rubric estimator
  const picks = document.querySelectorAll('.rubricPick');
  const scoreOut = document.getElementById('scoreOut');
  const resetBtn = document.getElementById('resetEstimator');

  function calcScore() {
    let total = 0;
    picks.forEach(p => total += Number(p.value));
    scoreOut.textContent = `Estimated Score: ${total} / 150`;
  }
  picks.forEach(p => p.addEventListener('change', calcScore));
  resetBtn.addEventListener('click', () => {
    picks.forEach(p => p.selectedIndex = 0);
    calcScore();
  });
  calcScore();
});
</script>
